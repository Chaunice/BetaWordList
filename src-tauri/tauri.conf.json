{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "betawordlist",
  "version": "0.1.1",
  "identifier": "com.betawordlist.corpus",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "betawordlist",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon_256.png",
      "icons/icon.ico"
    ],
    "resources": [
      "legacy/*.*"
    ]
  }
}
